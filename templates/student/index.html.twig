{% extends 'master/base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1>Student index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>MiddleName</th>
                <th>LastName</th>
                <th>Sex</th>
                <th>Year</th>
                <th>AcademicYear</th>
                <th>actions</th>
            </tr>  
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.firstName }}</td>
                <td>{{ student.middleName }}</td>
                <td>{{ student.lastName }}</td>
                <td>{{ student.sex }}</td>
                <td>{{ student.year }}</td>
                <td>{{ student.academicYear }}</td>
                <td>
                    <a href="{{ path('student_show', {'id': student.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('student_edit', {'id': student.id}) }}" class="btn btn-warning">edit</a>
                    <a href="{{ path('barcode', {'id': student.id}) }}"  class="btn btn-primary">Barcode</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('student_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
