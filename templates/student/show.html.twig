{% extends 'master/base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ student.firstName }}</td>
            </tr>
            <tr>
                <th>MiddleName</th>
                <td>{{ student.middleName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ student.lastName }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ student.sex }}</td>
            </tr>
            <tr>
                <th>ID Number</th>
                <td>{{ student.idNumber }}</td>
            </tr>
            <tr>
                <th>Barcode</th>
                <td>{{ student.barcode }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="/uploads/{{ student.photo }}"/></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('student_index') }}" class="btn btn-info">back to list</a>

    <a href="{{ path('student_edit', {'id': student.id}) }}" class="btn btn-warning">edit</a>

    {{ include('student/_delete_form.html.twig') }}


    
{% endblock %}
