{% extends 'master/base.html.twig' %}

{% block title %}College index{% endblock %}

{% block body %}
    <h1>College index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for college in colleges %}
            <tr>
                <td>{{ college.id }}</td>
                <td>{{ college.name }}</td>
                <td>{{ college.description }}</td>
                <td>
                    <a href="{{ path('college_show', {'id': college.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('college_edit', {'id': college.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('college_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
